<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/indexCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/mp_xl"
    android:paddingBottom="@dimen/mp_xl"
    tools:context=".controller.main.NewGameFragment">

    <ImageView
        android:layout_width="@dimen/image_weight_xxxxl"
        android:layout_height="@dimen/image_weight_xxxxl"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/mp_xxxl"
        android:layout_marginBottom="@dimen/mp_xxl"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/mp_xl"
        android:layout_marginEnd="@dimen/mp_xl"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/new_game_tip"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/text_xxl" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newB"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mp_xxl"
        android:layout_marginBottom="@dimen/mp_xxl"
        android:letterSpacing="0"
        android:text="@string/new_game"
        android:textAllCaps="true"
        android:textColor="@color/color_button_text"
        android:textSize="@dimen/text_l"
        android:textStyle="normal"
        app:backgroundTint="@color/colorAccent"
        app:cornerRadius="@dimen/mp_m"
        app:rippleColor="@color/colorAccentLight"
        tools:ignore="UnusedAttribute" />

</LinearLayout>
